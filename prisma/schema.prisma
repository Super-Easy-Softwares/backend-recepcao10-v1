generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model testUser {
  id   String @id @default(uuid()) @map("_id") @db.ObjectId
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model admin {
  id       String @id @default(uuid()) @map("_id") @db.ObjectId
  email    String
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model user {
  id       String @id @default(uuid()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model igreja {
  id   String @id @default(uuid()) @map("_id") @db.ObjectId
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model visitante {
  id           String @id @default(uuid()) @map("_id") @db.ObjectId
  name         String
  phone        String
  gender       String
  age          Int
  address      String
  cityAndState String
  religion     String
  smallGroup   String
  bibleStudy   String
  baptismDate  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model visita {
  id        String @id @default(uuid()) @map("_id") @db.ObjectId
  visitDate String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
